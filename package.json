{
    "name": "hashtagwars",
    "description": "open source front-end for hashtagwars",
    "version": "1.0.0",
    "author": "levsthings",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/levsthings/hashtagwars"
    },
    "scripts": {
        "cleanup": "rimraf public/",
        "dev": "webpack-dev-server --config ./src/webpack.config.dev.js --progress",
        "build": "yarn cleanup && export NODE_ENV=production || SET \"NODE_ENV=production\" && webpack --config ./src/webpack.config.prod.js --optimize-minimize --progress",
        "serve": "yarn build && static public",
        "test": "jest",
        "lint": "eslint --fix ./src/ --color",
        "precommit": "lint-staged"
    },
    "engines": {
        "node": ">=8.2.1",
        "yarn": ">=0.27.5"
    },
    "lint-staged": {
        "*.js": [
            "yarn lint",
            "git add"
        ]
    },
    "jest": {
        "runner": "jest-runner-eslint",
        "displayName": "lint",
        "testMatch": [
            "<rootDir>/src/**/*.{js,jsx}"
        ]
    },
    "browserslist": [
        "last 2 versions"
    ],
    "devDependencies": {
        "@monolambda/eslint-config": "^1.4.6",
        "babel-core": "^6.26.0",
        "babel-eslint": "^7.2.3",
        "babel-loader": "^7.1.2",
        "babel-preset-env": "^1.6.0",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-2": "^6.24.1",
        "chalk": "^2.1.0",
        "copy-webpack-plugin": "^4.0.1",
        "css-loader": "^0.28.5",
        "eslint": "^4.5.0",
        "extract-text-webpack-plugin": "^3.0.0",
        "file-loader": "^0.11.1",
        "html-loader": "^0.5.1",
        "html-webpack-plugin": "^2.28.0",
        "husky": "^0.14.3",
        "image-webpack-loader": "^3.4.0",
        "jest": "^21.0.2",
        "jest-runner-eslint": "^0.1.0",
        "lint-staged": "^4.0.4",
        "node-sass": "^4.5.3",
        "node-static": "^0.7.9",
        "postcss-loader": "^2.0.5",
        "prop-types": "^15.5.10",
        "pug": "^2.0.0-rc.2",
        "pug-html-loader": "^1.1.5",
        "rimraf": "^2.6.1",
        "sass-loader": "^6.0.5",
        "style-loader": "^0.18.1",
        "webpack": "^3.5.5",
        "webpack-dev-server": "^2.4.5",
        "webpack-visualizer-plugin": "^0.1.11"
    },
    "dependencies": {
        "bulma": "^0.5.1",
        "chart.js": "^2.6.0",
        "isomorphic-fetch": "^2.2.1",
        "react": "^15.6.1",
        "react-chartjs-2": "^2.6.1",
        "react-dom": "^15.6.1"
    }
}
