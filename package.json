{
  "name": "hashtag-battle",
  "description": "open source front-end for hashtag-battle",
  "version": "1.0.0",
  "author": "levsthings",
  "license": "Unlicense",
  "repository": {
    "type": "git",
    "url": "https://github.com/levsthings/hashtag-battle"
  },
  "scripts": {
    "cleanup": "rimraf public/",
    "dev": "webpack-dev-server --config ./src/webpack.config.dev.js --progress",
    "build": "yarn cleanup && export NODE_ENV=production || SET \"NODE_ENV=production\" && webpack --config ./src/webpack.config.prod.js --optimize-minimize --progress --hide-modules",
    "serve": "yarn build && static public",
    "test": "eslint ./src/ --color",
    "lint": "eslint --fix ./src/ --color",
    "precommit": "lint-staged"
  },
  "engines": {
    "node": "8.0.0",
    "yarn": "0.24.3"
  },
  "lint-staged": {
    "*.js": [
      "yarn lint",
      "git add"
    ]
  },
  "browserslist": [
    "last 2 versions"
  ],
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "chalk": "^2.1.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.4.1",
    "eslint-config-monolambda": "^1.3.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.1",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.28.0",
    "husky": "^0.14.3",
    "image-webpack-loader": "^3.3.1",
    "lint-staged": "^4.0.3",
    "node-sass": "^4.5.3",
    "node-static": "^0.7.9",
    "postcss-loader": "^2.0.5",
    "pug": "^2.0.0-rc.2",
    "pug-html-loader": "^1.1.5",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.5",
    "style-loader": "^0.18.1",
    "webpack": "^3.5.4",
    "webpack-dev-server": "^2.4.5",
    "webpack-visualizer-plugin": "^0.1.11"
  },
  "dependencies": {
    "bulma": "^0.4.3"
  }
}
